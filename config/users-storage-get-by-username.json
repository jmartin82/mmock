{
    "description": "Getting the stored user by username",
    "request": {
        "method": "GET",
        "path": "/storage-users-by-username/*"
    },
    "persist": {
        "entity": "/storage-users/user-{{ storage.GetValue({{ request.url./storage-users-by-username/(?P<value>.+) }}) }}.json"
    },
    "response": {
        "statusCode": 202,
        "headers": {
            "Content-Type": [
                "application/json"
            ]
        },
        "body":"{{ persist.entity.content }}"
    }
}