{  
    "description": "Gets a persisted entity by matching the id from the url using regex",
    "request":{  
        "method":"GET",
        "path":"/users/:userid.json"
    },
    "persist":{  
        "entity":"/users/user-{{request.path.userid)}}.json"
    },
    "response":{  
        "statusCode":200,
        "headers":{  
            "Content-Type":[  
                "application/json"
            ]
        },
        "body":"{{persist.entity.content}}"
    }
}