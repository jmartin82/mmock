{
    "request": {
        "method": "POST",
        "path": "/users/*.json"
    },
    "persist": {
        "entity": "/users/user-{{request.url./users/(?P<value>\\d+)}}.json",
        "actions" : {
            "write" : "{{ request.body }}",
            "append" : "{ \"id\": {{request.url./users/(?P<value>\\d+)}}}"
        }
    },
    "response": {
        "statusCode": 202,
        "headers": {
            "Content-Type": [
                "application/json"
            ]
        },
        "body":"{{persist.entity.content}}"
    }
}